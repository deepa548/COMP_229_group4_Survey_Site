<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
 <!-- added the faculties to the value attribute to render the page ,same name as given in render method in route page -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1><%= title %></h1>
      <form class="form" method="post">
        <div class="form-group">
          <label for="IdTextField">Survey ID</label>
          <input
            type="text"
            class="form-control"
            id="IdTextField"
            placeholder="Survey Id"
            name="Surveyid"
            value="<%= surveys.Surveyid %>"  
            required
          />
        </div>

        <div class="form-group">
          <label for="NameTextField">Survey Name</label>
          <input
            type="text"
            class="form-control"
            id="NameTextField"
            placeholder="Survey Name"
            name="Surveyname"
            value="<%= surveys.Surveyname %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="DeptTextField">Survey Question</label>
          <input
            type="text"
            class="form-control"
            id="AuthorDeptTextField"
            placeholder="Survey Question"
            name="SurveyQuestion"
            value="<%= surveys.SurveyQuestion %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="SubTextField">Survey Answer</label>
          <input
            type="text"
            class="form-control"
            id="SubTextField"
            placeholder="Survey Answer"
            name="SurveyAnswer"
            value="<%= surveys.SurveyAnswer %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">
          <i class="fa fa-check-square-o"></i> Submit
        </button>
        <a href="/surveys" class="btn btn-warning"
          ><i class="fa fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
