<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Survey List</h3>
      <a href="/surveys/add" class="btn btn-primary"  
        ><i class="fa fa-plus"></i> Add a Survey</a>
      <br>
      <br>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Survey ID</th>
              <th class="text-center">Survey Name</th>
              <th class="text-center">Survey Question</th>
              <th class="text-center">Survey Answer</th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < surveys.length; count++) { %>
            <tr>
              <td><%= surveys[count].Surveyid %></td>
              <td class="text-center"><%= surveys[count].Surveyname %></td>
              <td class="text-center"><%= surveys[count].SurveyQuestion %></td>
              <td class="text-center"><%= surveys[count].SurveyAnswer %></td>
              <td class="text-center">
                <a href="/surveys/details/<%= surveys[count]._id %>" class="btn btn-primary btn-sm">
                  <i class="fas fa-pencil-alt"></i> Edit</a>
              </td>
              <td class="text-center">
                <a href="/surveys/delete/<%= surveys[count]._id %>" class="btn btn-warning btn-sm">
                  <i class="fas fa-trash"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      </main>

      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
